
<% layout('layout/boilerplate') %> 
<body>
  <div class="row">
      <h1 class="text-center">New Campground</h1>
      <div class="col-6 offset-3">
        <form action="/add" method="post">
        <div class="mb-3">
            <label class="form-label" for="title">camp title</label>
            <input class="form-control" type="text" id="title" name="campground[title]" placeholder="title goes here">
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">location</label>
            <input class="form-control" type="text" id="location" name="campground[location]" placeholder="location goes here">

        </div>
        <div class="mb-3">
            <label class="form-label" for="image">image url</label>
            <input class="form-control" type="text" id="image" name="campground[image]" placeholder="image url">
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">description</label>
            <textarea class="form-control" type="text" id="description" name="campground[discreption]" placeholder="discreption"></textarea>
        </div>
        <div class="mb-3">
            <label for="price">campground price</label>
            <div class="input-group ">
                
                <span class="input-group-text">$</span>
                <input type="text" class="form-control" id="price" name="campground[price]">
                
              </div>
        </div>
        <div class="btn-group">
                    <input  class="btn btn-outline-primary" type="submit" value="add camp">
        </div>
        </form>
      </div>
  </div>
    
</body>
</html>